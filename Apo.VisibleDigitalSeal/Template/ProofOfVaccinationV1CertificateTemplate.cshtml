                <p class="warning-text">This certificate only records the most recent @ViewBag.TruncatedDoseCount of the holder's @ViewBag.OriginalDoseCount vaccinations</p>
            </div>
        }
        @foreach (var vaccinationEvent in Model.Vds.Data.Message.VaccinationEvents)
        {
            <div class="padding-bottom-10" style="page-break-inside: avoid">
                <table>
                    <thead>
                        <tr>
                            <td colspan="5" class="table-header">
                                <div class="row">
                                    <div class="col-12 padding-bottom-0"><span class="vaccination-event-heading">VACCINATION EVENT</span></div>
                                </div>
                                <div class="row">
                                    <div class="col-4 padding-top-0">
                                        Vaccine or prophylaxis:
                                        <div>
                                            <span class="value">
                                                @vaccinationEvent.VaccineOrProphylaxis
                                            </span>
                                            (COVID-19)
                                        </div>
                                    </div>
                                    <div class="col-4 padding-top-0">
                                        Vaccine brand:
                                        <div class="value">
                                            @vaccinationEvent.VaccineBrand
                                        </div>
                                    </div>
                                    <div class="col-4 padding-top-0">
                                        Disease or agent targeted:
                                        <div>
                                            <span class="value">
                                                @vaccinationEvent.DiseaseOrAgentTargeted
                                            </span>
                                            (COVID-19)
                                        </div>
                                    </div>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <th class="padding-right-0">Date of vaccination:</th>
                            <th class="padding-right-0">Dose number:</th>
                            <th class="padding-right-0">Country of vaccination:</th>
                            <th class="padding-right-0">Administering centre:</th>
                            <th class="padding-right-0">Vaccine batch number:</th>
                        </tr>
                    </thead>
                    @foreach (var vaccination in vaccinationEvent.VaccinationDetails)
                    {
                        <tr>
                            <td class="value">
                                @vaccination.DateOfVaccination
                            </td>
                            <td class="value">
                                @vaccination.DoseNumber
                            </td>
                            <td class="value">
                                @vaccination.CountryOfVaccination
                            </td>
                            <td class="value">
                                @vaccination.AdministeringCentre
                            </td>
                            <td class="value">
                                @vaccination.VaccineBatchNumber
                            </td>
                        </tr>
                    }
                </table>
            </div>
        }
        <div class="row">
            <div class="col-12">
                <div class="no-break">
                    <p class="text">
                        This document bears a Visible Digital Seal for a Non-Constrained Environment (VDS-NC), as specified by the International<br />
                        Civil Aviation Organization. UVCI means 'Unique Vaccination Certificate Identifier', XM68M6 and RA01.0 are World Health<br />
                        Organization codes for COVID-19.
                    </p>
                </div>
            </div>
        </div>
    </div>
</body>
<head>
