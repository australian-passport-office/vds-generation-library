<html lang="en">
<body>
    <div id="first-page-header">
        <img class="coat-of-arms" src="data:image/png;base64," />
        <h1>SAMPLE International COVID-19 Vaccination Certificate</h1>
        <table class="header-table">
            <tr>
                <td style="width: 25%;" class="padding-left-0 left">Proof of Vaccination</td>
                <td style="width: 25%;" class="center">Issued by @Model.Vds.Data.Header.IssuingCountry</td>
                <td style="width: 25%;" class="center">Version @Model.Vds.Data.Header.Version</td>
                <td style="width: 25%;" class="right padding-right-0">UVCI @Model.Vds.Data.Message.UVCI</td>
            </tr>
        </table>
    </div>

    <p class="sr-only">
        Sample Government
        International COVID-19 Vaccination Certificate
        Proof of Vaccination
        Issued by @(Model.Vds.Data.Header.IssuingCountry)
        Version @(Model.Vds.Data.Header.Version)
        Unique Vaccination Certificate Identifier @(Model.Vds.Data.Message.UVCI)
    </p>

    <div class="container">
        <div class="row">
            <div class="col-5 padding-left-0 padding-30">
                <div class="row">
                    <div class="col-12">
                        <img src="data:image/png;base64, @Convert.ToBase64String(Model.Barcode.Bytes)" style="width: 100%;" alt="Image of QR barcode containing vaccination details" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 center">
                        <span>Protect the QR code from marks and damage</span>
                    </div>
                </div>
            </div>
            <div class="col-7 padding-top-30">
                <div>
                    <div class="row">
                        <div class="col-4 padding-top-2">Name of the holder:</div>
                        <div class="col-8 personal-details value">@(ViewBag?.HolderNameForDisplay ?? Model.Vds.Data.Message.PersonIdentification.Name) </div>
                    </div>
                    <div class="row">
                        <div class="col-4 padding-top-2">Date of birth:</div>
                        <div class="col-8 personal-details value">@Model.Vds.Data.Message.PersonIdentification.DateOfBirth</div>
                    </div>
                    <div class="row">
                        <div class="col-4 padding-top-2">Sex:</div>
                        <div class="col-8 personal-details value">@Model.Vds.Data.Message.PersonIdentification.Sex</div>
                    </div>
                    <div class="row">
                        <div class="col-4 padding-top-2">Passport number:</div>
                        <div class="col-8 personal-details value">@Model.Vds.Data.Message.PersonIdentification.UniqueIdentifier</div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-10">
                        <p class="text">
                            <br />
                            <strong>Visible Digital Seal (VDS-NC)</strong>
                            <br />
                            Authorities can verify that this document is true and unaltered with a QR reader that checks against Australia's
                            ePassport Country Signing Certificate Authority public key.
                        </p>
                    </div>
                </div>
            </div>
        </div>
        @if (ViewBag.IsTruncated != null && (bool.TryParse((string)ViewBag.IsTruncated.ToString(), out bool hasTruncatedDoses) && hasTruncatedDoses))
        {
